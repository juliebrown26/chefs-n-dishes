@model chefsndishes.Models.NewDishViewModel;

<div class="container">
    <div class="row" style="margin-top: 15px;"">
        <h1>Add a Dish!</h1>
    </div>
    <div class="row" style="margin: 15px;">
        <a href="/dishes">Home</a>
    </div>
    <form action="AddDish" method="post">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.NewDish.Name)<br>
                    @Html.LabelFor(m => m.NewDish.Name)
                    @Html.EditorFor(m => m.NewDish.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.NewDish.Calories)<br>
                    @Html.LabelFor(m => m.NewDish.Calories)
                    @Html.EditorFor(m => m.NewDish.Calories, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.NewDish.Description)<br>
                    @Html.LabelFor(m => m.NewDish.Description)
                    <textarea class="form-control" asp-for="NewDish.Description" rows="5"></textarea>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <span asp-validation-for="NewDish.ChefId"></span><br>
                    <label>Chef:</label><br>
                    <select class="form-control" asp-for="NewDish.ChefId">
                        @foreach(Chef item in Model.Chefs)
                        {
                            <option value="@item.ChefId">@item.FirstName @item.LastName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.NewDish.Tastiness)<br>
                    @Html.LabelFor(m => m.NewDish.Tastiness)
                    <select class="form-control" id="Tastiness" asp-for="NewDish.Tastiness">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Add Dish</button>
                </div>
            </div>
        </div>            
    </form>
</div>