@using chefsndishes.Models
@model Chef
<div class="container">
    <div class="row" style="margin-top: 15px;"">
        <h1>Add a Chef!</h1>
    </div>
    <div class="row">
        <a href="/">Home</a>
    </div>
    <form action="AddChef" method="post">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.FirstName)<br>
                    @Html.LabelFor(m => m.FirstName)
                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.LastName)<br>
                    @Html.LabelFor(m => m.LastName)
                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.Birthday)<br>
                    @Html.LabelFor(m => m.Birthday)
                    @Html.EditorFor(m => m.Birthday, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add Chef</button>
                </div>
            </div>
        </div>
    </form>
</div>